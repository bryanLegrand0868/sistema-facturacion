<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Backups - Sistema de Tickets</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #2c3e50;
            box-shadow: 0 2px 4px rgba(0, 0, 0, .1);
        }

        .navbar-brand {
            color: white !important;
            font-weight: bold;
        }

        .card {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05);
            margin-bottom: 1.5rem;
        }

        .card-header {
            background-color: #fff;
            border-bottom: 2px solid #f8f9fa;
            font-weight: 600;
        }

        .status-badge {
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            font-weight: 500;
        }

        .status-connected {
            background-color: #d4edda;
            color: #155724;
        }

        .status-disconnected {
            background-color: #f8d7da;
            color: #721c24;
        }

        .backup-item {
            transition: all 0.3s ease;
        }

        .backup-item:hover {
            background-color: #f8f9fa;
        }

        .action-buttons .btn {
            padding: 0.25rem 0.5rem;
            margin: 0 0.2rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">Sistema de Tickets</a>
            <div class="d-flex">
                <a href="/" class="btn btn-outline-light me-2">
                    <i class="bi bi-house-fill"></i>
                </a>
                <a href="/configuracion" class="btn btn-outline-light">
                    <i class="bi bi-gear"></i>
                </a>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- Estado del Sistema -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-hdd-network me-2"></i>
                            Estado del Sistema
                        </h5>
                        <div class="mt-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>Backup Automático:</span>
                                <span class="status-badge status-connected">
                                    <i class="bi bi-check-circle-fill me-1"></i>
                                    Activo (Domingos 2:00 AM)
                                </span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span>Estado USB:</span>
                                <span id="usbStatus" class="status-badge">
                                    <i class="bi bi-hourglass-split me-1"></i>
                                    Verificando...
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-info-circle me-2"></i>
                            Información
                        </h5>
                        <div class="mt-3">
                            <p class="mb-2"><strong>Backups automáticos:</strong> <span id="totalBackups">0</span></p>
                            <p class="mb-2"><strong>Máximo permitido:</strong> 10 backups</p>
                            <p class="mb-2"><strong>Ubicación:</strong> <code>/backups</code></p>
                            <p class="mb-0 text-muted small">Los backups manuales se descargan directamente</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Acciones Rápidas -->
        <div class="card">
            <div class="card-header">
                <i class="bi bi-lightning-fill me-2"></i>
                Acciones Rápidas
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3 mb-md-0">
                        <button class="btn btn-primary w-100" id="btnCrearBackup">
                            <i class="bi bi-download me-2"></i>
                            Descargar Backup
                        </button>
                    </div>
                    <div class="col-md-4 mb-3 mb-md-0">
                        <button class="btn btn-warning w-100" id="btnLimpiarBackups">
                            <i class="bi bi-trash me-2"></i>
                            Limpiar Backups Antiguos
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-info w-100" id="btnActualizarLista">
                            <i class="bi bi-arrow-clockwise me-2"></i>
                            Actualizar Lista
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista de Backups -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <i class="bi bi-folder-fill me-2"></i>
                    Backups Disponibles
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre del Archivo</th>
                                <th>Tipo</th>
                                <th>Fecha</th>
                                <th>Tamaño</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="backupsTabla">
                            <tr>
                                <td colspan="5" class="text-center text-muted">
                                    <i class="bi bi-hourglass-split me-2"></i>
                                    Cargando backups...
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación para Restaurar -->
    <div class="modal fade" id="restaurarModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Confirmar Restauración
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-3"><strong>¿Está seguro de que desea restaurar este backup?</strong></p>
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Esta acción reemplazará todos los datos actuales de la base de datos con los datos del backup seleccionado.
                    </div>
                    <p class="mb-0">Archivo: <code id="restaurarFilename"></code></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-warning" id="btnConfirmarRestaurar">
                        <i class="bi bi-arrow-counterclockwise me-1"></i>
                        Restaurar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            let backupSeleccionado = null;
            const restaurarModal = new bootstrap.Modal(document.getElementById('restaurarModal'));

            // Cargar estado inicial
            cargarEstadoUSB();
            cargarListaBackups();

            // Actualizar estado USB cada 10 segundos
            setInterval(cargarEstadoUSB, 10000);

            // Crear backup manual
            $('#btnCrearBackup').click(async function() {
                const btn = $(this);
                btn.prop('disabled', true);
                btn.html('<i class="bi bi-hourglass-split me-2"></i>Creando...');

                try {
                    const response = await fetch('/api/backup/create', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    });

                    if (response.ok) {
                        // Obtener el blob del archivo
                        const blob = await response.blob();

                        // Obtener el nombre del archivo del header
                        const contentDisposition = response.headers.get('Content-Disposition');
                        let filename = 'backup.sql';
                        if (contentDisposition) {
                            const filenameMatch = contentDisposition.match(/filename="(.+)"/);
                            if (filenameMatch) {
                                filename = filenameMatch[1];
                            }
                        }

                        // Crear un link temporal y descargarlo
                        const url = window.URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.href = url;
                        a.download = filename;
                        document.body.appendChild(a);
                        a.click();
                        window.URL.revokeObjectURL(url);
                        document.body.removeChild(a);

                        mostrarAlerta('success', 'Backup creado y descargado exitosamente. Selecciona dónde guardarlo.');
                    } else {
                        const data = await response.json();
                        throw new Error(data.message || 'Error al crear backup');
                    }
                } catch (error) {
                    mostrarAlerta('error', 'Error al crear backup: ' + error.message);
                } finally {
                    btn.prop('disabled', false);
                    btn.html('<i class="bi bi-download me-2"></i>Descargar Backup');
                }
            });

            // Limpiar backups antiguos
            $('#btnLimpiarBackups').click(async function() {
                const result = await Swal.fire({
                    title: '¿Limpiar backups antiguos?',
                    text: 'Se mantendrán solo los últimos 10 backups',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#ffc107',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sí, limpiar',
                    cancelButtonText: 'Cancelar'
                });

                if (result.isConfirmed) {
                    try {
                        const response = await fetch('/api/backup/clean', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' }
                        });

                        const data = await response.json();

                        if (data.success) {
                            mostrarAlerta('success', `${data.deleted} backup(s) eliminado(s)`);
                            cargarListaBackups();
                        } else {
                            throw new Error(data.message || 'Error al limpiar backups');
                        }
                    } catch (error) {
                        mostrarAlerta('error', 'Error al limpiar backups: ' + error.message);
                    }
                }
            });

            // Actualizar lista
            $('#btnActualizarLista').click(function() {
                cargarListaBackups();
                cargarEstadoUSB();
            });

            // Confirmar restauración
            $('#btnConfirmarRestaurar').click(async function() {
                if (!backupSeleccionado) return;

                const btn = $(this);
                btn.prop('disabled', true);
                btn.html('<i class="bi bi-hourglass-split me-1"></i>Restaurando...');

                try {
                    const response = await fetch('/api/backup/restore', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ filename: backupSeleccionado })
                    });

                    const data = await response.json();

                    if (data.success) {
                        restaurarModal.hide();
                        mostrarAlerta('success', 'Backup restaurado exitosamente');
                    } else {
                        throw new Error(data.message || 'Error al restaurar backup');
                    }
                } catch (error) {
                    mostrarAlerta('error', 'Error al restaurar backup: ' + error.message);
                } finally {
                    btn.prop('disabled', false);
                    btn.html('<i class="bi bi-arrow-counterclockwise me-1"></i>Restaurar');
                    backupSeleccionado = null;
                }
            });

            // Función para cargar estado USB
            async function cargarEstadoUSB() {
                try {
                    const response = await fetch('/api/backup/usb-status');
                    const data = await response.json();

                    if (data.connected) {
                        $('#usbStatus').removeClass('status-disconnected').addClass('status-connected');
                        $('#usbStatus').html(`<i class="bi bi-check-circle-fill me-1"></i>Conectado: ${data.path}`);
                    } else {
                        $('#usbStatus').removeClass('status-connected').addClass('status-disconnected');
                        $('#usbStatus').html('<i class="bi bi-x-circle-fill me-1"></i>No conectado');
                    }
                } catch (error) {
                    console.error('Error cargando estado USB:', error);
                }
            }

            // Función para cargar lista de backups
            async function cargarListaBackups() {
                try {
                    const response = await fetch('/api/backup/list');
                    const backups = await response.json();

                    const tbody = $('#backupsTabla');
                    tbody.empty();

                    $('#totalBackups').text(backups.length);

                    if (backups.length === 0) {
                        tbody.append(`
                            <tr>
                                <td colspan="5" class="text-center text-muted">
                                    <i class="bi bi-inbox me-2"></i>
                                    No hay backups disponibles
                                </td>
                            </tr>
                        `);
                        return;
                    }

                    backups.forEach(backup => {
                        const tipo = backup.filename.includes('_auto_') ? 'Automático' : 'Manual';
                        const fecha = new Date(backup.date).toLocaleString('es-GT');
                        const badgeClass = tipo === 'Automático' ? 'bg-info' : 'bg-primary';

                        tbody.append(`
                            <tr class="backup-item">
                                <td>${backup.filename}</td>
                                <td><span class="badge ${badgeClass}">${tipo}</span></td>
                                <td>${fecha}</td>
                                <td>${backup.sizeFormatted}</td>
                                <td class="text-center">
                                    <div class="action-buttons">
                                        <button class="btn btn-sm btn-success" onclick="restaurarBackup('${backup.filename}')" title="Restaurar">
                                            <i class="bi bi-arrow-counterclockwise"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger" onclick="eliminarBackup('${backup.filename}')" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        `);
                    });
                } catch (error) {
                    console.error('Error cargando backups:', error);
                    mostrarAlerta('error', 'Error al cargar la lista de backups');
                }
            }

            // Función global para restaurar backup
            window.restaurarBackup = function(filename) {
                backupSeleccionado = filename;
                $('#restaurarFilename').text(filename);
                restaurarModal.show();
            };

            // Función global para eliminar backup
            window.eliminarBackup = async function(filename) {
                const result = await Swal.fire({
                    title: '¿Eliminar backup?',
                    text: 'Esta acción no se puede deshacer',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#dc3545',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar'
                });

                if (result.isConfirmed) {
                    try {
                        const response = await fetch('/api/backup/delete', {
                            method: 'DELETE',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ filename })
                        });

                        const data = await response.json();

                        if (data.success) {
                            mostrarAlerta('success', 'Backup eliminado exitosamente');
                            cargarListaBackups();
                        } else {
                            throw new Error(data.message || 'Error al eliminar backup');
                        }
                    } catch (error) {
                        mostrarAlerta('error', 'Error al eliminar backup: ' + error.message);
                    }
                }
            };

            // Función para mostrar alertas
            function mostrarAlerta(tipo, mensaje) {
                Swal.fire({
                    icon: tipo,
                    title: mensaje,
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });
            }
        });
    </script>
</body>
</html>
