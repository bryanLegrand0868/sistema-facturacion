{
  "name": "ecl-fruver",
  "version": "1.0.0",
  "description": "Sistema de Facturaci√≥n para ECL FRUVER",
  "main": "server.js",
  "bin": "server.js",
  "pkg": {
    "assets": [
      "views/**/*",
      "public/**/*",
      "node_modules/ejs/**/*"
    ],
    "targets": [
      "node16-win-x86",
      "node16-linux-x86",
      "node16-macos-x86"
    ],
    "outputPath": "dist"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg . --no-bytecode --public"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.2.0",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "pkg": "^5.8.1"
  }
}
